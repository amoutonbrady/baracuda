{
	"name": "@amoutonbrady/ha-dom",
	"version": "0.0.0",
	"private": false,
	"description": "An alternative to JSX to work with HyperApp v2 view layer",
	"repository": "https://github.com/amoutonbrady/ha-dom.git",
	"license": "MIT",
	"author": "Alexandre Mouton-Brady <amoutonbrady@gmail.com>",
	"files": [
		"pkg/"
	],
	"main": "src/index.js",
	"scripts": {
		"build": "pika build",
		"release": "pika publish",
		"version": "npm run build",
		"test": "nyc riteway -r esm tests/**/*.test.js | tap-nirvana"
	},
	"devDependencies": {
		"@pika/pack": "^0.5.0",
		"@pika/plugin-build-web": "^0.8.1",
		"@pika/plugin-bundle-web": "^0.8.1",
		"@pika/plugin-standard-pkg": "^0.8.1",
		"esm": "^3.2.25",
		"hyperapp": "^2.0.3",
		"nyc": "^15.0.0",
		"pika-plugin-unpkg-field": "^1.1.0",
		"preact": "^10.2.1",
		"prettier": "^1.19.1",
		"riteway": "^6.1.1",
		"tap-nirvana": "^1.1.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"@pika/pack": {
		"pipeline": [
			[
				"@pika/plugin-standard-pkg"
			],
			[
				"@pika/plugin-build-web"
			],
			[
				"@pika/plugin-bundle-web",
				{
					"targets": {
						"browsers": [
							"defaults"
						],
						"esmodules": false
					}
				}
			],
			[
				"pika-plugin-unpkg-field"
			]
		]
	}
}
